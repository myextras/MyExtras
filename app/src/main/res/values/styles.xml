<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/branding_blue</item>
        <item name="colorPrimaryDark">@color/branding_grey</item>
        <item name="colorAccent">@color/branding_blue</item>
        <item name="android:textColor">@color/branding_grey</item>
    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/branding_blue</item>
        <item name="colorPrimary">@color/branding_grey</item>
        <item name="colorPrimaryDark">@color/branding_grey</item>
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="TextAppearance.EntryTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TextAppearance.EntryDate" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

</resources>
